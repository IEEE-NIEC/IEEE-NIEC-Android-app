<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/name_edit_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Enter name"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/change_image_text_view" />

        <EditText
            android:id="@+id/email_edit_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Enter email"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/name_edit_text"
            android:layout_marginLeft="8dp"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" />

        <EditText
            android:hint="Enter mobile mumber"
            android:id="@+id/mobile_edit_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="phone"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="6dp"
            app:layout_constraintTop_toBottomOf="@+id/email_edit_text"
            app:layout_constraintHorizontal_bias="0.503"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" />

        <android.support.v7.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="1.0"
            android:id="@+id/interest_recycler_view"
            android:layout_marginTop="8dp"
            tools:listitem="@layout/interest_item_layout"
            app:layout_constraintTop_toBottomOf="@+id/interest_edit_text" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Interest"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/mobile_edit_text"
            android:layout_marginLeft="8dp" />

        <EditText
            android:id="@+id/interest_edit_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Add"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView6"
            android:layout_marginLeft="8dp"
            app:layout_constraintRight_toLeftOf="@+id/add_interest_image_view"
            android:layout_marginRight="8dp" />

        <ImageView
            android:id="@+id/add_interest_image_view"
            android:background="?attr/selectableItemBackground"
            android:layout_gravity="center"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_done_black_24dp"
            app:layout_constraintTop_toTopOf="@+id/interest_edit_text"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/interest_edit_text"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintVertical_bias="0.333"
            app:layout_constraintRight_toRightOf="parent" />

        <Button
            android:id="@+id/add_details_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/interest_recycler_view"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" />

        <ImageView
            android:alpha="0.5"
            android:id="@+id/profile_image_view"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:srcCompat="@drawable/ic_launcher"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" />

        <!--<Button-->
            <!--android:id="@+id/change_image_button"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="Edit"-->
            <!--app:layout_constraintLeft_toRightOf="@+id/imageView2"-->
            <!--android:layout_marginLeft="32dp"-->
            <!--app:layout_constraintTop_toTopOf="@+id/imageView2"-->
            <!--android:layout_marginTop="8dp"-->
            <!--app:layout_constraintBottom_toBottomOf="@+id/imageView2"-->
            <!--android:layout_marginBottom="8dp" />-->

        <ProgressBar
            android:visibility="gone"
            android:id="@+id/image_progress"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="@+id/profile_image_view"
            app:layout_constraintTop_toTopOf="@+id/profile_image_view"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="@+id/profile_image_view"
            app:layout_constraintBottom_toBottomOf="@+id/profile_image_view"
            android:layout_marginBottom="8dp" />

        <TextView
            android:padding="4dp"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:gravity="center_horizontal"
            android:background="@color/colorAccent"
            android:textColor="@android:color/white"
            android:id="@+id/change_image_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Change"
            app:layout_constraintLeft_toLeftOf="@+id/profile_image_view"
            app:layout_constraintRight_toRightOf="@+id/profile_image_view"
            android:layout_marginRight="0dp"
            android:layout_marginLeft="0dp"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="0dp"
            app:layout_constraintTop_toBottomOf="@+id/profile_image_view" />


    </android.support.constraint.ConstraintLayout>

</android.support.v4.widget.NestedScrollView>